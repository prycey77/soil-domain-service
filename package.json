{
  "name": "soil-domain-service",
  "version": "0.1.0",
  "description": "Domain service for soil samples",
  "scripts": {
    "lint": "eslint . --ext ts,tsx && npm run prettier",
    "prettier": "npx prettier --ignore-path .eslintignore -w '**/*.(js|json)'",
    "init": "./bin/init.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bx-LOOOP/soil-domain-service.git"
  },
  "author": "Bx",
  "license": "ISC",
  "bugs": {
    "url": "https://bx-looop.atlassian.net/secure/RapidBoard.jspa?projectKey=LOOOP"
  },
  "homepage": "https://github.com/Bx-LOOOP/service-template#readme",
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "semantic-release-plus": "^18.2.5",
    "ts-jest": "^26.5.5",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "commitPaths": [
      ".",
      ":(exclude)*.md"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "src/dist"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "deploy/dist"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "src/package.json",
            "deploy/package.json"
          ]
        }
      ]
    ]
  }
}
